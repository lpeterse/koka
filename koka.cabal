                       Type.Assumption,
                       Type.Infer,
                       Type.InferMonad,
                       Type.InfGamma,
                       Type.Kind,
                       Type.Operations,
                       Type.Pretty,
                       Type.Type,
                       Type.TypeVar,
                       Type.Unify
